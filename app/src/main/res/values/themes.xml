<resources>
    <!-- Base application theme. -->
    <style name="Theme.InterviewPortal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.InterviewPortal.ToolbarStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.InterviewPortal.ChipStyle">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>